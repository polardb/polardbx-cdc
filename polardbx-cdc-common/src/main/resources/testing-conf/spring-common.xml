<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:annotation-config/>
    <context:component-scan
            base-package="com.aliyun.polardbx.binlog.dao,com.aliyun.polardbx.binlog.service"/>

    <context:component-scan base-package="com.aliyun.polardbx.binlog" use-default-filters="false">
        <context:include-filter type="annotation" expression="com.aliyun.polardbx.binlog.testing.spring.TestComponent"/>
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Component"/>
    </context:component-scan>

    <!--
        1.system-properties-mode采用OVERRIDE模式，优先从系统环境变量获取，环境变量没有再从配置文件获取；
        2.公有云环境的很多配置，由管控生成，会放到${HOME}/env/env.properties文件中，所以location需要配置两个文件
        3.location配置多个文件时，参数的生效原则是：后者优先，即env.properties会重载config.properties中的配置
        4.env.properties文件会在shell脚本中被放到classpath中，如果没有也不会报错
    -->
    <context:property-placeholder system-properties-mode="OVERRIDE"
                                  location="classpath:config.properties,classpath:env.properties"
                                  ignore-resource-not-found="true"/>

    <bean id="customPropertySourcesPlaceholderConfigurer"
          class="com.aliyun.polardbx.binlog.testing.TestPropertySourcesPlaceholderConfigurer">
    </bean>

    <bean class="com.aliyun.polardbx.binlog.SpringContextHolder"/>
</beans>
